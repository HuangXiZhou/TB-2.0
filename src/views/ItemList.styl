.repos-view
  padding-top 4px

.list-nav, .list
  border-radius 2px

.description
  padding 15px 30px
  text-align left
  a:hover
    color #d480aa

.list-nav
  padding 15px 30px
  text-align left
  a
    color #3eaf7c
  span
    margin 0 1em
  .disabled
    color #444

.list
  margin 30px 0
  width 100%
  transition all .5s cubic-bezier(.55,0,.1,1)
  ul
    list-style-type none
    padding 0
    margin 0

.slide-left-enter, .slide-right-leave-to
  opacity 0
  transform translate(30px, 0)

.slide-left-leave-to, .slide-right-enter
  opacity 0
  transform translate(-30px, 0)

.item-move, .item-enter-active, .item-leave-active
  transition all .5s cubic-bezier(.55,0,.1,1)

.item-enter
  opacity 0
  transform translate(30px, 0)

.item-leave-active
  position absolute
  opacity 0
  transform translate(30px, 0)

@media (max-width 600px)
  .list
    margin 10px 0
