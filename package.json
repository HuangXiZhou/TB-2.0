    "express": "^4.16.2",
    "highlight.js": "^9.12.0",
    "lru-cache": "^4.1.2",
    "marked": "^0.3.19",
    "md5": "^2.2.1",
    "route-cache": "0.4.3",
    "serve-favicon": "^2.4.5",
    "vue": "^2.5.16",
    "vue-class-component": "^6.2.0",
    "vue-property-decorator": "^6.0.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.16",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
